<?php get_header(); ?>

<div class="blog-category-container">
    <!-- MAIN CONTENT -->
    <div class="blog-main">
        <?php if (have_posts()) : while (have_posts()) : the_post(); ?>
            <div class="blog-card">
                <div class="blog-thumbnail">
                    <a href="<?php the_permalink(); ?>">
                        <?php the_post_thumbnail('medium'); ?>
                    </a>
                </div>
                <div class="blog-content">
                    <h2 class="blog-title">
                        <a href="<?php the_permalink(); ?>"><?php the_title(); ?></a>
                    </h2>
                    <div class="blog-excerpt">
                        <?php echo wp_trim_words(get_the_excerpt(), 25); ?>
                    </div>
                </div>
            </div>
        <?php endwhile; else: ?>
            <p>Không có bài viết nào.</p>
        <?php endif; ?>

        <div class="pagination">
            <?php the_posts_pagination(); ?>
        </div>
    </div>

    <!-- SIDEBAR -->
    <aside class="blog-sidebar">
        <div class="sidebar-section">
            <div class="sidebar-header">
                <h3>TIN MỚI NHẤT</h3>
                <a href="/blog">Xem thêm ></a>
            </div>
            <?php
            $recent = new WP_Query(['posts_per_page' => 5]);
            while ($recent->have_posts()) : $recent->the_post(); ?>
                <div class="sidebar-post">
                    <a href="<?php the_permalink(); ?>">
                        <div class="thumb"><?php the_post_thumbnail('thumbnail'); ?></div>
                        <div class="info"><?php echo wp_trim_words(get_the_title(), 10); ?></div>
                    </a>
                </div>
            <?php endwhile;
            wp_reset_postdata(); ?>
        </div>

        <div class="sidebar-section city-block">
            <h4>Tỉnh thành có nhiều tin đăng nhất</h4>
            <div class="city-grid">
                <div class="city-item">
                    <img src="https://cdn.bestprice.vn/images/destinations/large/vietnam-ha-noi.jpg" alt="Hà Nội">
                    <div>Hà Nội</div>
                </div>
                <div class="city-item">
                    <img src="https://cdn.bestprice.vn/images/destinations/large/vietnam-tp-ho-chi-minh.jpg" alt="TP.HCM">
                    <div>TP. Hồ Chí Minh</div>
                </div>
            </div>
        </div>
    </aside>
</div>

<?php get_footer(); ?>

