const urlParams = new URLSearchParams(window.location.search);
const hotelId = urlParams.get('hotel_id');
const roomIndex = urlParams.get('room_index');
const roomPrice = parseInt(urlParams.get('price')) || 0;

if (!hotelId || !roomPrice) {
  document.querySelector(".form-tour-wrapper").innerHTML = "<p style='color:red;text-align:center'>❌ Không tìm thấy thông tin khách sạn.</p>";
}
