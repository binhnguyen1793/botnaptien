<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggleBtn = document.getElementById('bp-toggle-menu');
    const navMenu = document.getElementById('bp-nav');

    toggleBtn.addEventListener('click', function () {
      navMenu.classList.toggle('bp-nav-open');
    });
  });
</script>



