<script>
function redirectToVungMien(event) {
    event.preventDefault();
    const diadiem = document.querySelector('select[name="diadiem"]').value;
    if (diadiem) {
        window.location.href = "/vung_mien/" + diadiem;
    } else {
        alert("Vui lòng chọn địa điểm.");
    }
    return false;
}
</script>
