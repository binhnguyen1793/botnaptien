e.preventDefault();
        const select = document.getElementById("diadiem-select");
        const option = select.options[select.selectedIndex];
        const fullSlug = option.getAttribute("data-full-slug");
        if (!fullSlug) {
            alert("Vui lòng chọn địa điểm.");
            return false;
        }
        window.location.href = "/vung_mien/" + fullSlug + "/";
    }
    </script>

    <?php
    return ob_get_clean();
}
